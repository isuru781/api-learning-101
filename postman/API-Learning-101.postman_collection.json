        {
          "name": "Create User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"User created successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "});",
                  "",
                  "pm.test(\"Response has user data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('id');",
                  "    pm.expect(jsonData.data).to.have.property('createdAt');",
                  "});",
                  "",
                  "// Save user ID for later use",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"created_user_id\", jsonData.data.id);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate random email to avoid conflicts",
                  "const randomEmail = \"user\" + Math.floor(Math.random() * 10000) + \"@example.com\";",
                  "pm.environment.set(\"random_email\", randomEmail);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{random_email}}\",\n  \"age\": 25\n}"
            },
            "url": {
              "raw": "https://api-learning.nisalgunawarchana.com/api/users",
              "protocol": "https",
              "host": ["api-learning", "nisalgunawarchana", "com"],
              "path": ["api", "users"]
            },
            "description": "Create a new user. Screenshot this showing status 201 and the created user with ID."
          },
          "response": []
        },
